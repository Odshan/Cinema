//---------------------------------------------------------------------------

#ifndef MovieModelH
#define MovieModelH

#include "JsonObject.h"


class MovieObject : public TJsonObject
{
   int    d_varInt;
   String d_varString;
   double d_varDouble;


   String d_name;
   String d_description;
   int d_age;
   String d_duration;
   String d_price;
   String d_starttime;

 public:
   MovieObject();

   __property String	Name		= {read = d_name, write = d_name};
   __property String	Description	= {read = d_description, write = d_description};
   __property int 		Age			= {read = d_age, write = d_age};
   __property String    Duration    = {read = d_duration; write = d_duration};
   __property String    Price       = {read = d_price; write = d_price};

 protected:
 private:
   void         FromJson(TJSONObject *aObject);
   TJSONObject *ToJson();
};
//---------------------------------------------------------------------------
#endif
